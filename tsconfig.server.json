{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "outDir": ".amplify-hosting/compute/default",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"]
    }
  },
  "include": ["app/entry.server.tsx", "app/+types/**/*"]
}
